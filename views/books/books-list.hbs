<h1>Books in our DB:</h1>
<section class="search">
    <h2>Filter your search here:</h2>
    <form method="get" action="/books">
        <label for="">By rating:<input name="minRate" type="number" min="0" max="10" /></label>
        
        <button type="submit">Search</button>
    </form>
</section>
{{#each books}}
<section class="book-summary">
    <h2>{{this.title}}</h2>
    <p>
        Author: {{this.author.name}} <br />
        Rating: {{this.rating}} <br />
        <a href="/books/{{_id}}">More details</a>
        <a href="/books/{{_id}}/edit">Edit</a> {{!-- link to redirect to the edit form for each specific book  --}}
        <form method="POST" action="/books/{{_id}}/delete" >
            <button>Delete</button>
        </form>

    </p>

</section>

{{/each}}